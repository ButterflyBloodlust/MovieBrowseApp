<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.hal9000.moviebrowseapp.MovieDetailsActivity">

    <ImageView
        android:layout_weight="2"
        android:id="@+id/movie_details_image"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_local_movies_black_50dp">
    </ImageView>

    <LinearLayout
        android:id="@+id/movie_details_title_category_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_weight="0.05"
            android:id="@+id/movie_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:gravity="bottom"
            android:textSize="28sp"
            android:shadowColor="#ffffff"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:textAllCaps="true"
            android:textColor="#000000"/>

        <TextView
            android:layout_weight="0.1"
            android:id="@+id/movie_details_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:gravity="top"
            android:textSize="21sp"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pic_gallery_viewpager"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <!--
    <FrameLayout
        android:layout_weight="3"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    -->

</LinearLayout>
